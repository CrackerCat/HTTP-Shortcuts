<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory>

        <Preference
            app:icon="@drawable/ic_version"
            app:key="changelog"
            app:title="@string/settings_changelog" />

        <Preference
            app:icon="@drawable/ic_faq"
            app:key="documentation"
            app:summary="@string/settings_documentation_summary"
            app:title="@string/settings_documentation" />

        <Preference
            app:icon="@drawable/ic_privacy_policy"
            app:key="privacy_policy"
            app:summary="@string/settings_privacy_policy_summary"
